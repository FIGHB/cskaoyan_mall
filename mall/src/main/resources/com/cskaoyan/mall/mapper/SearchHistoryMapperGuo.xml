<!--国旭-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mall.mapper.SearchHistoryMapperGuo">
  <resultMap id="aresultMap" type="com.cskaoyan.mall.vo.SearchHistoryGuo">
      <id column="id" property="id"/>
      <result column="user_id" property="userId"/>
      <result column="keyword" property="keyword"/>
      <result column="add_time" property="addTime"/>
  </resultMap>
  <select id="getSearchHistoryListByScreen" resultMap="aresultMap">
    select id, user_id, keyword, add_time from cskaoyan_mall_search_history where
    1=1
    <choose>
      <when test="userId!=0 and keyword!=null">
        and user_id=#{userId} and keyword like concat('%',#{keyword},'%') and deleted=0
      </when>
      <when test="userId!=0 and keyword==null">
        and user_id=#{userId} and deleted=0
      </when>
      <otherwise>
        and keyword like concat('%',#{keyword},'%') and deleted=0
      </otherwise>
    </choose>
  </select>
</mapper>
